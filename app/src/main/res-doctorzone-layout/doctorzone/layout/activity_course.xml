<?xml version="1.0" encoding="utf-8"?>
<com.xiaowei.android.wht.views.SildingFinishLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sildingFinishLayout_my_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_default"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_my_course_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/back_b" />

        <com.xiaowei.android.wht.views.TextFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="课程资料"
            android:textColor="@color/color_deep_gray"
            android:textSize="@dimen/activity_tab" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_my_course"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:scrollbars="none"
        android:background="#ffffff"
        android:divider="@color/color_gray_default"
        android:dividerHeight="2dp" >
    </ListView>

</LinearLayout>

</com.xiaowei.android.wht.views.SildingFinishLayout>