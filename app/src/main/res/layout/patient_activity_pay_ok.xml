<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_default_activity" >

    <RelativeLayout
        android:id="@+id/title_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_major"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/title_textView"
            style="@style/titleTextView"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="预约成功" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/back_button"
            android:background="@color/color_divider"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/title_div" >

        <TextView
            android:id="@+id/tv_transfer_treatment_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/corners_green"
            android:lineSpacingExtra="4dp"
            android:padding="24dp"
            android:gravity="center"
            android:text="您已预约成功，请按时就诊。"
            android:textColor="#ffffff"
            android:textSize="@dimen/activity_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@null"
                android:src="@drawable/round_g_big" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@null"
                android:src="@drawable/round_g_big" />

        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/pay_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/default_margin"
        android:background="@color/color_major" >

        <TextView
            android:id="@+id/return_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
        	android:layout_marginBottom="20dp"
            android:text="返回首页"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/activity_tab" />
    </RelativeLayout>

</RelativeLayout>