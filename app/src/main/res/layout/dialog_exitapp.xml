<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_default_activity" >

    <ImageView
        android:id="@+id/info_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/icon_tip" />

    <TextView
        android:id="@+id/info_textView"
        android:layout_below="@+id/info_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/color_deep_gray"
        android:text="确定退出吗？"
        />

    <LinearLayout
        android:id="@+id/button_div"
        android:layout_below="@+id/info_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/selector_white_bt_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:layout_marginRight="10dp"
            android:textColor="@color/font4WhiteButton"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/yes_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/selector_bottom_bt"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/font4BlueButton"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>