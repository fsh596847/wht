<?xml version="1.0" encoding="utf-8"?>
<com.xiaowei.android.wht.views.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sildingFinishLayout_patientMyReferralInfo_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7" >

    <RelativeLayout
        android:id="@+id/title_div"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_major" >

        <ImageView
            android:id="@+id/back_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="病例信息"
            android:textColor="@color/color_white"
            android:textSize="@dimen/activity_tab" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollView_patientMyReferralInfo_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_div"
        android:background="#ffffff"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓　　名"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/name_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint=""
                    android:maxLength="20"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textColorHint="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性　　别"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/sex_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint=""
                    android:maxLength="20"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textColorHint="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/city_textViw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint=""
                    android:maxLength="20"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textColorHint="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生年月"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/birthday_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint=""
                    android:maxLength="20"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textColorHint="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:paddingLeft="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病情描述"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/sick_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint=""
                    android:minHeight="100dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textColorHint="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:paddingLeft="24dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/picLabel_textViw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影像资料"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/picLabel_textViw"
                    android:paddingLeft="8dp"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/pic1_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:src="@null"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/pic2_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:src="@null"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/pic3_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:src="@null"
                            android:visibility="gone" />
                    </LinearLayout>
                </HorizontalScrollView>
                
