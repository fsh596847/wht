                        android:src="@null"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/pic3_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@null"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:scaleType="centerCrop"
                        android:src="@null"
                        android:visibility="gone" />
                </LinearLayout> -->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="转诊医生"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/referralDoctorName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="接诊专家"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/acceptDoctorName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="6dp"
                    android:paddingTop="12dp"
                    android:text="状态"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />
				<ImageView 
				    android:contentDescription="@null"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:src="@drawable/alarm_clock_s"/>
                <TextView
                    android:id="@+id/status_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:text="已接诊"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/finish_textView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@color/color_major"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="完成"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/activity_main"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</com.xiaowei.android.wht.views.SildingFinishLayout>