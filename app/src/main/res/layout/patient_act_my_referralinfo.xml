<?xml version="1.0" encoding="utf-8"?>
<com.xiaowei.android.wht.views.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sildingFinishLayout_patientMyReferralInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_default" >

    <RelativeLayout
        android:id="@+id/title_div"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_major"
        android:layout_marginBottom="2dp" >

        <ImageView
            android:id="@+id/back_imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="待预约转诊"
            android:textColor="#ffffff"
            android:textSize="@dimen/activity_tab" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollView_patientMyReferralInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/booking_textView"
        android:layout_below="@+id/title_div"
        android:background="#ffffff"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp" >
                
                <LinearLayout
                    android:id="@+id/pic_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingRight="8dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <com.xiaowei.android.wht.views.CircularImage
                    android:id="@+id/pic_imageView"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_head"
                    android:scaleType="centerInside" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/name_div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/pic_LinearLayout"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:paddingTop="12dp"
                        android:text="接诊专家"
                        android:textColor="@color/color_deep_gray"
                        android:textSize="@dimen/activity_main" />

                    <TextView
                        android:id="@+id/doctorName_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/activity_default_x" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_div"
                    android:layout_toLeftOf="@+id/pic_LinearLayout"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:paddingTop="12dp"
                        android:text="性　　别"
                        android:textColor="@color/color_deep_gray"
                        android:textSize="@dimen/activity_main" />

                    <TextView
                        android:id="@+id/sex_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/activity_default_x" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="所属医院"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/hospital_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="所属科室"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/dept_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="职　　称"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/techTitle_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="职　　务"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/position_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="所在地区"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/city_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="学术成果"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/publish_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="社会职务"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/jobresult_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="转诊医生"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/doctor2_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="患者姓名"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_main" />

                <TextView
                    android:id="@+id/patientName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/activity_default_x" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/booking_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@color/color_major"
        android:gravity="center"
        android:padding="10dp"
        android:text="预约时间"
        android:textColor="@color/color_white"
        android:textSize="@dimen/activity_tab" />

</com.xiaowei.android.wht.views.SildingFinishLayout>