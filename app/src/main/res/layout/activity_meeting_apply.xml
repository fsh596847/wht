    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.9"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医师执业证书编码"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_main" />

        <EditText
            android:id="@+id/et_meeting_apply_execute_permit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_patient_add_edittext"
            android:hint=""
            android:imeOptions="actionNext"
            android:inputType="number"
            android:lines="1"
            android:maxLength="15"
            android:paddingLeft="8dp"
            android:textColor="@color/color_deep_gray"
            android:textColorHint="@color/color_divider_gray"
            android:textSize="@dimen/activity_main" >
        </EditText>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.9"
        android:background="#ffffff"
        android:paddingRight="12dp"
        android:paddingLeft="24dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否住宿"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_main" />

        <ToggleButton
            android:id="@+id/tbtn_meeting_apply_stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_btn"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_meeting_apply_pay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_major"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/activity_tab"
        android:text="提交" />

</LinearLayout>

</com.xiaowei.android.wht.views.SildingFinishLayout>