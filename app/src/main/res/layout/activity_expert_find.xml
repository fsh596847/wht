<?xml version="1.0" encoding="utf-8"?>
<com.xiaowei.android.wht.views.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sildingFinishLayout_expert_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_default" >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_default" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_marginBottom="2dp" >

        <ImageView
            android:id="@+id/iv_expert_find_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:contentDescription="@null"
            android:src="@drawable/back_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_deep_gray"
            android:textSize="@dimen/activity_tab"
            android:text="找专家" />
        
        <ImageView
            android:id="@+id/iv_expert_find_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/search_b"
            android:visibility="gone" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginBottom="2dp" >
                
                <LinearLayout
                    android:id="@+id/btn_expert_find_section_office"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" 
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/tv_expert_find_section_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/down_g"
                        android:gravity="bottom"
                        android:text="科室"
                        android:textColor="@color/color_deep_gray"
                        android:textSize="@dimen/activity_main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_expert_find_district"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#ffffff" >
                    
                    <TextView
                        android:id="@+id/tv_expert_find_district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/down_g"
                        android:gravity="bottom"
                        android:text="地区"
                        android:textColor="@color/color_deep_gray"
                        android:textSize="@dimen/activity_main" />
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/listview_expert_find_expert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.7"
                android:background="#ffffff"
                android:divider="#f7f7f7"
                android:scrollbars="none"
                android:dividerHeight="2dp" >

            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/activity_small"
                android:text="提示：如果您没有找到合适的专家，请点击【转给客服】" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_expert_find_ask"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_major"
                    android:textSize="@dimen/activity_tab"
                    android:background="#ffffff"
                    android:layout_marginRight="2dp"
                    android:text="转给专家" />
                
                <Button
                    android:id="@+id/btn_expert_find_system"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_deep_gray"
                    android:textSize="@dimen/activity_tab"
                    android:background="#ffffff"
                    android:text="转给客服" />

            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_expert_find_section_office"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:visibility="gone" >

            <ListView
                android:id="@+id/listview_expert_find_section_office1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:divider="#ffffff"
                android:dividerHeight="2dp"
                android:scrollbars="none" >

            </ListView>

            <ListView
                android:id="@+id/listview_expert_find_section_office2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:divider="#f7f7f7"
                android:dividerHeight="2dp"
                android:scrollbars="none" >

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_expert_find_district"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:visibility="gone" >

            <ListView
                android:id="@+id/listview_expert_find_district_province"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:divider="#ffffff"
                android:dividerHeight="2dp"
                android:scrollbars="none" >

            </ListView>

            <ListView
                android:id="@+id/listview_expert_find_district_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:divider="#f7f7f7"
                android:dividerHeight="2dp"
                android:scrollbars="none" >

            </ListView>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

</com.xiaowei.android.wht.views.SildingFinishLayout>
