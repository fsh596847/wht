    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医师资格证书编码"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_main" />

        <EditText
            android:id="@+id/et_register_info1_certification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@drawable/corners_patient_add_edittext"
            android:lines="1"
            android:maxLength="27"
            android:imeOptions="actionNext"
            android:hint=""
            android:paddingLeft="8dp"
            android:inputType="number"
            android:textColor="@color/color_deep_gray"
            android:textColorHint="@color/color_divider_gray"
            android:textSize="@dimen/activity_main" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医师执业证书编码"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_main" />

        <EditText
            android:id="@+id/et_register_info1_execute_permit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@drawable/corners_patient_add_edittext"
            android:lines="1"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:hint=""
            android:inputType="number"
            android:paddingLeft="8dp"
            android:textColor="@color/color_deep_gray"
            android:textColorHint="@color/color_divider_gray"
            android:textSize="@dimen/activity_main" >
        </EditText>
    </LinearLayout>

</LinearLayout>