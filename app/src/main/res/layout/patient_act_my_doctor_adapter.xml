<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingRight="10dp" >

    <com.xiaowei.android.wht.views.CircularImage
        android:id="@+id/pic_imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_margin="8dp"
        android:contentDescription="@null"
        android:src="@null" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pic_imageView"
        android:padding="10dp"
        android:text="张三"
        android:textColor="@color/color_333"
        android:textSize="@dimen/activity_main" />

    <TextView
        android:id="@+id/hospitalName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_textView"
        android:layout_toRightOf="@+id/pic_imageView"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text="XXX医院..."
        android:textColor="@color/font_gray_mid"
        android:textSize="@dimen/activity_main" />

    <TextView
        android:id="@+id/doctorInfo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resumeIcon_imageView"
        android:layout_below="@+id/hospitalName_textView"
        android:layout_toLeftOf="@+id/resumeIcon_imageView"
        android:gravity="center_vertical"
        android:text="详情"
        android:textColor="@color/font_gray_white" />

    <ImageView
        android:id="@+id/resumeIcon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hospitalName_textView"
        android:contentDescription="@null"
        android:src="@drawable/go_gs" />

    <ImageView
        android:id="@+id/locIcon_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/doctorInfo_textView"
        android:layout_toRightOf="@+id/pic_imageView"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_doctor_loc"
        android:visibility="gone" />

    <TextView
        android:id="@+id/city_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/locIcon_imageView"
        android:layout_below="@+id/doctorInfo_textView"
        android:layout_toRightOf="@+id/locIcon_imageView"
        android:gravity="bottom"
        android:text="上海..."
        android:textColor="@color/font_gray_white"
        android:visibility="gone" />

</RelativeLayout>