<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_window_login_choose_way"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_choose_way" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_window_login_choose_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/login_doctor"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/activity_tab"
            android:textColor="@color/color_major"
            android:text="我是医生" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_window_login_choose_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/login_patient"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/activity_tab"
            android:textColor="#dcc4b9"
            android:text="我是患者" />

    </LinearLayout>
    

</LinearLayout>
