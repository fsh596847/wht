<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/iv_item_pay_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:paddingLeft="4dp"
        android:paddingRight="8dp"
        android:src="@drawable/icon_logo" />

    <TextView
        android:id="@+id/tv_item_pay_record_paytype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/iv_item_pay_record"
        android:textColor="@color/color_deep_gray"
        android:textSize="@dimen/activity_main_x" />

    <TextView
        android:id="@+id/tv_item_pay_record_incometype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_pay_record_paytype"
        android:layout_toRightOf="@id/iv_item_pay_record"
        android:textColor="@color/color_light_gray"
        android:textSize="@dimen/activity_main"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_item_pay_record_mny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_major"
        android:textSize="@dimen/activity_main_x" />

    <TextView
        android:id="@+id/tv_item_pay_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_item_pay_record_mny"
        android:textColor="@color/color_light_gray"
        android:textSize="@dimen/activity_default" />

</RelativeLayout>