<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/ll_item_expert_find_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#e6e6e6"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <com.xiaowei.android.wht.views.CircularImage
            android:id="@+id/iv_item_expert_find_headphoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_head" >
        </com.xiaowei.android.wht.views.CircularImage>
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/ll_item_expert_find_image" >
        
        <ImageView
            android:id="@+id/iv_item_expert_find_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:src="@drawable/expert_find_g" />

        <TextView
            android:id="@+id/tv_item_expert_find_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_deep_gray"
            android:textSize="@dimen/activity_tab_x" />

        <TextView
            android:id="@+id/tv_item_expert_find_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_item_expert_find_name"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_main_x" />

        <Button
            android:id="@+id/btn_item_expert_find_details"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/tv_item_expert_find_describe"
            android:drawableRight="@drawable/go_gs"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@null"
            android:focusable="false"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_default"
            android:text="详情" />

        <TextView
            android:id="@+id/tv_item_expert_find_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_item_expert_find_details"
            android:drawableLeft="@drawable/addr"
            android:gravity="bottom"
            android:paddingRight="32dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_light_gray"
            android:textSize="@dimen/activity_main" />

    </RelativeLayout>

</RelativeLayout>